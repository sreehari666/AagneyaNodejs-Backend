<head>
<link rel='stylesheet' href='/stylesheets/style.css' />
</head>

{{#if winner}}

<form action="{{winner._id}}" method="POST" enctype="multipart/form-data">
  <div class="container-judge">
    
    
    <div class="judge-header">
        <h1>Edit Winners</h1>
    </div>
    <hr>
    
    <label ><b>Name</b></label>
    <input type="text" placeholder="Enter Name" value="{{winner.name}}" name="name" id="name" required>
    

    <br><label ><b>Department</b></label>
    <div class="dropdown" >
        <select name="department" style="width: 30rem; height:5rem " id="department" required>
            <option value="choose" style="display: none;">Choose</option> 
            <option value="{{winner.department}}" selected>{{winner.department}}</option>
            <option value="cse" >CSE</option>
            <option value="ece">ECE</option>
            <option value="mech">MECH</option>
            <option value="civil">CIVIL</option>
            <option value="eee">EEE</option>
        </select>
    </div>

    <br><label ><b>Semester</b></label>
    <div class="dropdown" >
        <select name="semester" style="width: 30rem; height:5rem " id="semester" required>
            <option value="choose" style="display: none;">Choose</option>
            <option value="{{winner.semester}}" selected>{{winner.semester}}</option> 
            <option value="s1">S1</option>
            <option value="s2">S2</option>
            <option value="s3">S3</option>
            <option value="s4">S4</option>
            <option value="s5">S5</option>
            <option value="s6">S6</option>
            <option value="s7">S7</option>
            <option value="s8">S8</option>
        </select>
    </div>
    <br><label ><b>Description</b></label>
    <input type="text" placeholder="Enter Description" value="{{winner.description}}" name="description" id="description" required>

    <br><label ><b>Image</b></label><br><br>
    <img src="/winner-images/{{winner._id}}.jpg" alt="" style="width: 100px;height:auto" id="imgView_"><br><br>
    <input type="file" name="image"  id="image" class="form-control" onchange="viewImage(event)" class="pt-3">
  
    {{/if}}
    
    
    <hr>

    <button type="submit" class="registerbtn">Submit</button>
  </div>

  
</form> 
<script>
    function viewImage(winner){
        document.getElementById('imgView_').src=URL.createObjectURL(winner.target.files[0])
    }
</script>